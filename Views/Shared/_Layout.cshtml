<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GPIMS Web Server</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />
    <style>
        .status-idle { background-color: #6c757d; }
        .status-rest { background-color: #17a2b8; }
        .status-discharge { background-color: #dc3545; }
        .status-charge { background-color: #28a745; }
        .status-pause { background-color: #ffc107; }
        .status-finish { background-color: #007bff; }
        
        .chart-container {
            position: relative;
            height: 300px;
            margin-bottom: 20px;
        }
        
        .device-card {
            transition: transform 0.2s;
        }
        
        .device-card:hover {
            transform: translateY(-2px);
        }
        
        .data-value {
            font-family: 'Courier New', monospace;
            font-weight: bold;
        }
        
        .alarm-critical { border-left: 4px solid #dc3545; }
        .alarm-error { border-left: 4px solid #fd7e14; }
        .alarm-warning { border-left: 4px solid #ffc107; }
        .alarm-info { border-left: 4px solid #17a2b8; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-battery-three-quarters"></i> GPIMS Web Server
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">
                    <i class="fas fa-home"></i> Home
                </a>
            </div>
        </div>
    </nav>

    <main class="container mt-4">
        @RenderBody()
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.0/signalr.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/4.3.0/chart.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<!-- Views/Home/Index.cshtml -->
@model List<string>
@{
    ViewData["Title"] = "Device Overview";
}

<div class="row">
    <div class="col-12">
        <h1><i class="fas fa-tachometer-alt"></i> Device Overview</h1>
        <p class="text-muted">Monitor all connected devices in real-time</p>
    </div>
</div>

<div class="row" id="deviceGrid">
    @if (Model.Any())
    {
        @foreach (var deviceId in Model)
        {
            <div class="col-md-6 col-lg-4 mb-3">
                <div class="card device-card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="fas fa-microchip"></i> @deviceId
                        </h5>
                        <p class="card-text">
                            <span class="badge bg-success">Online</span>
                            <span class="text-muted">Last update: <span id="lastUpdate-@deviceId">--</span></span>
                        </p>
                        <div class="mt-3">
                            <a href="/Home/Device/@deviceId" class="btn btn-primary btn-sm">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <a href="/Home/Monitoring/@deviceId" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-chart-line"></i> Real-time
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No devices connected. Waiting for device data...
            </div>
        </div>
    }
</div>

@section Scripts {
<script>
    const connection = new signalR.HubConnectionBuilder()
        .withUrl("/deviceHub")
        .build();

    connection.start().then(function () {
        console.log("SignalR Connected");
        
        // Join all device groups
        @foreach (var deviceId in Model)
        {
            <text>connection.invoke("JoinDeviceGroup", "@deviceId");</text>
        }
    }).catch(function (err) {
        console.error(err.toString());
    });

    connection.on("ReceiveDeviceData", function (deviceData) {
        const lastUpdateElement = document.getElementById(`lastUpdate-${deviceData.deviceId}`);
        if (lastUpdateElement) {
            lastUpdateElement.textContent = new Date(deviceData.timestamp).toLocaleTimeString();
        }
    });
</script>
}